/* 背景图片 */
.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
page {
  position: relative;
  overflow: hidden;
}
.box {
  width: 690rpx;
  height: 100%;
  padding: 0 30rpx;
}

.date, .time {
  margin-top: 20rpx;
  text-align: center;
  font-size: 32rpx;
	color: #44acff;
}
.time {
  margin-top: 20rpx;
}
.wea {
  margin-top: 114rpx;
}
.wea text {
  font-size: 128rpx;
	color: #44acff;
  font-weight: 50;
  font-family: PingFang-SC-ExtraLight;
}
.wea image {
  width: 74rpx;
  height: 74rpx;
  margin-right: 20rpx;
}
.wea-text {
  font-size: 32rpx;
	color: #44acff;
  margin-top: 20rpx;
}

/* 未来天气 */
.feature-wea {
  width: 694rpx;
  position: absolute;
  bottom: 0;
  padding: 32rpx 28rpx;
  color: #44acff;
}
.feature-wea.x {
  padding-bottom: 98rpx;
}
.exponent {
  font-size: 28rpx;
  display: flex;
  color: #44acff;
  margin-top: 32rpx;
}
.exponent view:first-of-type {
  margin-right: 32rpx;
}
.exponent view:first-of-type image {
  width: 32rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.exponent view:last-of-type image {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.exponent text {
  vertical-align: middle;
}
.feature-wea-child {
  display: flex;
  width: 686rpx;
  margin-top: 32rpx;
  border-radius: 8rpx;
  background-color: rgba(255,255,255,.77);
}
.feature-wea-child .li {
  flex: 1;
  text-align: center;
  padding-bottom: 22rpx;
}
.feature-wea-child .li image {
  width: 74rpx;
  height: 74rpx;
  margin-top: 20rpx;
}
.feature-wea-child .li view:nth-of-type(1) {
  color: rgba(68,172,255,0.75);
  font-size: 24rpx;
  margin-top: 32rpx;
}
.feature-wea-child .li view:nth-of-type(2) {
  color: #44acff;
  font-size: 28rpx;
  margin-top: 16rpx;
}
.feature-wea-child .li view:nth-of-type(3) {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: rgba(68,172,255,0.75);
  height: 33rpx;
}
.feature-wea-child .li view:nth-of-type(4) {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #81a2fc;
}
.feature-wea-child .li view:nth-of-type(5) {
  color: #a3a3a3;
  font-size: 20rpx;
  margin-top: 12rpx;
}
.feature-wea-child .li view:nth-of-type(6) {
  color: #a3a3a3;
  font-size: 20rpx;
  margin-top: 12rpx;
  margin-bottom: 14rpx;
}

.address {
  padding-top: 64rpx;
  display: flex;
  margin-left: -15rpx;
}
.address image {
  width: 168rpx;
  height: 168rpx;
}
.address .name {
  font-size: 56rpx;
	color: #44acff;
	margin-top: 16rpx;
}