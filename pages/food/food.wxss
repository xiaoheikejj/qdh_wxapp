#food {
    min-height: 100%;
    background: #fafafa;
}

/* 搜索 */
.search {
    width: 718rpx;
    height: 88rpx;
    background-color: #eee;
    padding: 0 16rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.search .search-left {
    width: 588rpx;
    height: 60rpx;
    position: relative;
}
.search .search-left image {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    top: 16rpx;
    left: 16rpx;
}
.search .search-left input {
    width: 100%;
    height: 60rpx;
    background-color: #fff;
    border-radius: 60rpx;
    padding-left: 58rpx;
    font-size: 24rpx;  
}
.search .search-right {
    text-align: center;
}
.search .search-right image {
    width: 40rpx;
    height: 41rpx;
}
.search .search-right view {
    font-size: 16rpx;
    color: rgba(106, 165, 252, 1);
}
.placeholder-class {
    font-size: 24rpx;
}

/* 可以左右滑动的区域 */
.chooseOptions {
    background: #fff;
    display: flex;
    justify-content: space-between;
}
.chooseOptions .scroll {
    width: 560rpx;
    overflow: hidden;
    white-space: nowrap;
    height: 74rpx;
    padding: 24rpx 20rpx 0;
}
.chooseOptions .scroll scroll-view view {
    display: inline-block;
    height: 30rpx;
    margin-right: 30rpx;
    font-size: 24rpx;
    color: rgba(137, 137, 137, 1);
    padding: 7rpx 16rpx;
    background: rgba(239, 239, 244, 1);
    border-radius: 20rpx;
}
.chooseOptions .scroll scroll-view view.active {
    background: rgba(106, 165, 252, 1);
    color: #fff;
}
.chooseOptions .select-picker {
    line-height: 88rpx;
}
.chooseOptions .select-picker view {
    display: flex;
    align-items: center;
}
.chooseOptions .select-picker view image {
    width: 12rpx;
    height: 6rpx;
    margin-right: 16rpx;
}
.chooseOptions .select-picker view text {
    font-size: 24rpx;
    color: rgba(49, 49, 49, 1);
    display: inline-block;
    margin-right: 7rpx;
}

/* 酒店列表 */
.foodList {
    margin: 30rpx auto;
    width: 690rpx;
    background: #fff;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 17rpx 0 rgba(234, 240, 254, 1);
    overflow: hidden;
}
.foodList .list-food {
    display: flex;
    padding: 0 20rpx;
    margin-top: 30rpx;
}
.foodList .list-food:last-of-type {
    margin: 30rpx 0;
}
.foodList .list-food>image {
    width: 172rpx;
    height: 172rpx;
    margin-right: 20rpx;
}
.foodList .list-food .info {
    width: 458rpx;
}
.foodList .list-food .info .infoName {
    font-size: 28rpx;
    color: rgba(49, 49, 49, 1);
    font-weight: bold;
    max-width: 480rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.foodList .list-food .info .infoGrade text {
    font-size: 24rpx;
    color: rgba(162, 162, 162, 1);
    display: inline-block;
}
.foodList .list-food .info .infoGrade text:first-of-type {
    color: rgb(76, 163, 255);
    font-weight: bold;
    margin-right: 12rpx;
}
.foodList .list-food .info .infoGrade text:nth-of-type(2) {
    margin-right: 12rpx;
}
.foodList .list-food .info .infoLabel {
    height: 40rpx;
}
.foodList .list-food .info .infoLabel text {
    display: inline-block;
    font-size: 20rpx;
    color: rgb(76, 163, 255);
    padding: 2rpx 5rpx;
    border: 1rpx solid rgb(76, 163, 255);
    border-radius: 8rpx;
    margin-right: 8rpx;
}
.foodList .list-food .info .infoDistance {
    color: rgba(162, 162, 162, 1);
    font-size: 24rpx;
    margin-top: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.foodList .list-food .info .infoDistance>view {
    color: rgba(255, 158, 81, 1);
}
.foodList .list-food .info .infoDistance>view text {
    margin-right: 8rpx;
    font-weight: 400;
}
.foodList .list-food .info .infoDistance>view text:last-of-type {
    margin-right: 0;
}