/* 游记攻略 */
.content-box .content {
    width: 690rpx;
    overflow: hidden;
    margin: 0 auto;
}
.content .title {
    height: 144rpx;
    border-bottom: 2rpx solid rgb(237, 237, 237);
    overflow: hidden;
}
.content .title .name {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}
.content .title .name text:nth-of-type(1) {
    width: 8rpx;
    height: 34rpx;
    border-top-right-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
    background: rgba(81, 165, 255, 1);
    display: inline-block;
    margin-right: 12rpx;
}
.content .title .name text:nth-of-type(2) {
    font-size: 30rpx;
    color: rgba(49, 49, 49, 1);
    font-weight: bold;
    max-width: 640rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.content .title .time {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20rpx;
}
.content .title .time text:nth-of-type(1) {
    font-size: 20rpx;
    color: rgba(81, 165, 255, 1);
    padding: 2rpx 4rpx;
    border: 1rpx solid rgba(81, 165, 255, 1);
}
.content .title .time text:nth-of-type(2) {
    font-size: 24rpx;
    color: rgba(162, 162, 162, 1);
}

rich-text {
    padding: 20rpx 0;
    display: block;
}

/* 人数 */
.statistical {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    font-size: 28rpx;
    color: #a2a2a2;
    border-top: 2rpx solid rgb(237, 237, 237);
}
.statistical view {
    display: flex;
    align-items: center;
}
.statistical text {
    display: inline-block;
    padding-left: 14rpx;
}
.statistical .statistical-praise image {
    width: 28rpx;
    height: 24rpx;
    padding-left: 20rpx;
}
.statistical .statistical-browse image {
    width: 32rpx;
    height: 24rpx;
    padding-left: 20rpx;
}