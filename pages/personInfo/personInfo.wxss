/* pages/personInfo/personInfo.wxss */
page {
  background: #fafafa;
}
.box {
  border-top: 2rpx solid rgba(0, 0, 0, .12);
  margin: 20rpx 16rpx;
  padding: 0 16rpx 50rpx;
  background: #fff;
}
button {
  width: 686rpx;
	height: 88rpx;
	border-radius: 2rpx;
	border: solid 2rpx #81a2fc;
  line-height: 88rpx;
  margin-top: 50rpx;
  color: #81a2fc;
}

.i-input {
  font-size: 24rpx;
  color:#999;
  border-bottom: 1px solid rgba(0, 0, 0, .12);
}
.i-cell {
  padding-left: 20rpx;
  height: 90rpx;
  display:flex;
  background:#fff;
  align-items:center;
  line-height:1.4;
  font-size:26rpx;
  overflow:hidden;
}
.i-input-title {
  color:#495060;
  min-width:65px;
  padding-right:10px;
}
input {
  flex:1;
  line-height:1.6;
  padding:4px 0;
  min-height:22px;
  height:auto;
  font-size:14px;
}