<view class="box">
  <view class="i-input i-cell">
    <text class="i-cell-hd i-input-title">姓名</text>
    <input value="{{ name }}" placeholder="请输入姓名" bindblur="getDetail" id="1"></input>
  </view>
  <view class="i-input i-cell">
    <text class="i-cell-hd i-input-title">电话</text>
    <input value="{{ phone }}" type="number" maxlength="11" placeholder="请输入手机号" bindblur="getDetail" id="2"></input>
  </view>
  <view class="i-input i-cell">
    <text class="i-cell-hd i-input-title">地区</text>
    <input value="{{ IDcode }}" maxlength="18" placeholder="请输入身份证" bindblur="getDetail" id="3"></input>
  </view>
  <view class="i-input i-cell">
    <text class="i-cell-hd i-input-title">详细地址</text>
    <input value="{{ address }}" placeholder="请输入收货地址" bindblur="getDetail" id="4"></input>
  </view>
</view>
<button bindtap="saveMessage">保存并使用</button>
<button style="color: #a2a2a2;border: 2rpx solid #a2a2a2">删除收货地址</button>