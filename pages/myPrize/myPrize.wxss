page {
  background: #fafafa
}

.no-prize {
  height: 100%;
  position: relative
}
.no-prize view {
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)
}
.no-prize view image {
  width: 180rpx;
  height: 169rpx
}
.no-prize view text {
  display: block;
  font-size: 32rpx;
  color: #a2a2a2;
  margin-top: 45rpx
}

.prize .integral {
  background: #fff;
  border-radius: 4rpx;
  padding: 0 20rpx;
  margin: 30rpx 30rpx 0;
}
.prize .integral .top {
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 2rpx solid #f5f5f5;
  color: #a2a2a2;
  font-size: 20rpx
}
.prize .center {
  position: relative;
  height: 200rpx;
  overflow: hidden
}
.prize .center image {
  position: absolute;
  top: 20rpx;
  left: 0;
  width: 160rpx;
  height: 160rpx
}
.prize .center text {
  font-size: 30rpx;
  color: #313131;
  margin-left: 180rpx;
  display: block;
  margin-top: 19rpx;
  font-weight: bold
}
.prize .center button {
  height: 48rpx;
  color: #81a2fc;
  font-size: 28rpx;
  padding: 0 18rpx;
  background: #fff;
  line-height: 48rpx;
  border: 1rpx solid #81a2fc;
  border-radius: 4rpx;
  float: right;
  margin-left: 16rpx
}
.prize .center button.integral {
  color: #a2a2a2;
  border: 1rpx solid #a2a2a2;
  position: absolute;
  right: 0;
  bottom: 20rpx;
  margin: 0
}
.prize .center view {
  position: absolute;
  right: 0;
  bottom: 20rpx
}
.prize .ticket .center view {
  width: 96rpx;
  height: 96rpx;
  border-radius: 4rpx;
  border: 2rpx solid #f2f2f2;
  display: flex;
  justify-content: center;
  align-items: center
}
.prize .ticket .center view image {
  width: 80rpx;
  height: 34rpx
}