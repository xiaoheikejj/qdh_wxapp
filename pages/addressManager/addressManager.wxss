page {
    background: #fafafa;
}
.wechat-address {
    width: 750rpx;
    height: 88rpx;
    background: #e6edff;
    display: flex;
    align-items: center;
    justify-content: center;
}
.wechat-address image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 12rpx
}
.wechat-address text {
    font-size: 28rpx;
    color: #81a2fc
}
.ul {
    width: 690rpx;
    margin: 30rpx;
    box-shadow: 0 8rpx 16rpx 0 rgba(172, 179, 199, 0.16);
}
.ul .li {
    background: #fff;
    padding: 30rpx 20rpx;
    border-bottom: 2rpx solid #f5f5f5;
    display: flex;
}
.ul .li .select, .ul .li icon {
    width: 40rpx;
    height: 40rpx;
    align-self: center;
}
.ul .li .right {
    flex: 1;
    margin-left: 25rpx;
}
.ul .li .edit {
    width: 40rpx;
    height: 37rpx;
}
.ul .li .name {
    font-size: 30rpx;
}

.ul .li .address-text {
    color: #a2a2a2;
    font-size: 24rpx;
    vertical-align: middle;
}
.ul .li .location {
    width: 20rpx;
    height: 26rpx;
    vertical-align: middle;
    margin-right: 12rpx;
}


.add-address {
    width: 686rpx;
    height: 89rpx;
    line-height: 89rpx;
    border-radius: 4rpx;
    border: solid 2rpx #81a2fc;
    color: #81a2fc;
    font-size: 32rpx;
    margin-top: 50rpx
}