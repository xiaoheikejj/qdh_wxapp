/* pages/favorite/favorite.wxss */
page {
    background: #fafafa;
    display: flex;
    flex-direction: column;
}

/* 设置movable-area */
movable-area {
    width: 550rpx;
    height: 202rpx;
}
movable-view {
    width: 690rpx;
    height: 202rpx;
}
.favorite-ul {
    width: 690rpx;
    margin: 30rpx auto;
    border-radius: 8rpx;
    background-color: rgba(255, 255, 255, 1);
    box-shadow: 0 2rpx 17rpx 0 rgba(234, 240, 254, 1);
    overflow: hidden;
}
.favorite-ul>view {
    width: 690rpx;
    height: 200rpx;
    display: flex;
    flex-direction: row;
}
.favorite-ul>view:last-of-type {
    padding-bottom: 30rpx;
}
.favorite-ul .favorite-li {
    padding: 30rpx 20rpx 0;
    width: 650rpx;
    display: flex;
    background: #fff;
}
.favorite-ul .favorite-li>image {
    width: 172rpx;
    height: 172rpx;
    margin-right: 20rpx;
}
.favorite-ul .favorite-li .right {
    width: 458rpx;
}
.favorite-ul .favorite-li .right-title {
    color: rgba(49, 49, 49, 1);
    font-size: 28rpx;
    font-weight: bold;
}
.favorite-ul .favorite-li .right-score {
    display: flex;
    align-items: center;
    margin-top: 12rpx;
}
.favorite-ul .favorite-li .right-score text {
    color: rgba(162, 162, 162, 1);
    font-size: 24rpx;
    display: inline-block;
    margin-right: 12rpx;
}
.favorite-ul .favorite-li .right-score text:nth-of-type(1) {
    color: rgba(81, 165, 255, 1);
    font-size: 26rpx;
    font-weight: bold;
}
.favorite-ul .favorite-li .right-score text:nth-of-type(2) {
    font-size: 26rpx;
}
.favorite-ul .favorite-li .right-labels {
    display: flex;
    align-items: center;
    margin-top: 12rpx;
}
.favorite-ul .favorite-li .right-labels text {
    display: inline-block;
    font-size: 20rpx;
    color: rgba(81, 165, 255, 1);
    border: 1rpx solid rgba(81, 165, 255, 1);
    border-radius: 8rpx;
    padding: 0 5rpx;
    margin-right: 12rpx;
}
.favorite-ul .favorite-li .right-labels text:last-of-type {
    margin-right: 0;
}
.favorite-ul .favorite-li .right-distance {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 12rpx;
}
.favorite-ul .favorite-li .right-distance>text {
    color: rgba(162, 162, 162, 1);
    font-size: 24rpx;
}
.favorite-ul .favorite-li .right-distance>view {
    display: flex;
    align-items: center;
}
.favorite-ul .favorite-li .right-distance>view text {
    color: rgba(255, 158, 81, 1);
    font-size: 24rpx;
    display: inline-block;
}
.favorite-ul .favorite-li .right-distance>view text:first-of-type {
    margin-right: 10rpx;
}
.favorite-ul .favorite-li .right-distance>view.free {
    color: rgba(49, 49, 49, 1);
    font-size: 24rpx;
}
/* 取消收藏 */
.delete {
    width: 120rpx;
    border-radius: 8rpx;
    background-color: rgba(255, 98, 95, 1);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #fff;
    margin-top: 30rpx;
    margin-right: 20rpx;
}

/* 收藏列表为空 */
.empty {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.empty image {
    width: 140rpx;
    height: 140rpx;
}
.empty text {
    display: inline-block;
    color: rgba(162, 162, 162, 1);
    font-size: 36rpx;
}