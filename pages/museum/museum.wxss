/* pages/museum/museum.wxss */
#museum {
    background: #F1F2F6;
    min-height: 100%;
}

/* 搜索 */
.search {
    width: 718rpx;
    height: 88rpx;
    background-color: #eee;
    padding: 0 16rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.search .search-left {
    width: 588rpx;
    height: 60rpx;
    position: relative;
}
.search .search-left image {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    top: 16rpx;
    left: 16rpx;
}
.search .search-left input {
    width: 100%;
    height: 60rpx;
    background-color: #fff;
    border-radius: 60rpx;
    padding-left: 58rpx;
    font-size: 24rpx;  
}
.search .search-right {
    text-align: center;
}
.search .search-right image {
    width: 40rpx;
    height: 41rpx;
}
.search .search-right view {
    font-size: 16rpx;
    color: rgba(106, 165, 252, 1);
}
.placeholder-class {
    font-size: 24rpx;
}

/* 酒店列表 */
.museumList {
    margin: 30rpx auto;
    width: 690rpx;
    background: #fff;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 17rpx 0 rgba(234, 240, 254, 1);
    overflow: hidden;
}
.museumList .list-museum {
    display: flex;
    padding: 0 30rpx;
}
.museumList .list-museum:first-of-type {
    margin-top: 30rpx;
}
.museumList .list-museum {
    margin-bottom: 30rpx;
}
.museumList .list-museum>image {
    width: 172rpx;
    height: 172rpx;
}
.museumList .list-museum .info {
    margin-left: 20rpx;
    width: 458rpx;
}
.museumList .list-museum .info .infoName {
    font-size: 28rpx;
    color: rgba(49, 49, 49, 1);
    font-weight: bold;
    max-width: 480rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.museumList .list-museum .info .infoGrade {
    display: flex;
}
.museumList .list-museum .info .infoGrade text {
    font-size: 24rpx;
    color: rgba(162, 162, 162, 1);
    display: inline-block;
    margin-right: 12rpx;
    font-weight: 600;
}
.museumList .list-museum .info .infoGrade text:first-of-type {
    color: rgb(76, 163, 255);
    font-weight: bold;
    margin-right: 12rpx;
}
.museumList .list-museum .info .infoGrade text:last-of-type {
    margin-right: 0;
}
.museumList .list-museum .info .infoLabel {
    display: flex;
    height: 38rpx;
}
.museumList .list-museum .info .infoLabel text {
    display: inline-block;
    font-size: 20rpx;
    color: rgb(76, 163, 255);
    padding: 2rpx 5rpx;
    border: 1rpx solid rgb(76, 163, 255);
    border-radius: 8rpx;
    margin-right: 8rpx;
}
.museumList .list-museum .info .infoDistance {
    color: rgba(162, 162, 162, 1);
    font-size: 24rpx;
    margin-top: 5rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.museumList .list-museum .info .infoDistance>view {
    color: rgba(255, 158, 81, 1);
}
.museumList .list-museum .info .infoDistance>view text {
    margin-right: 8rpx;
    font-weight: 400;
}
.museumList .list-museum .info .infoDistance>view text:last-of-type {
    margin-right: 0;
}
.museumList .list-museum .info .infoOpentime {
    font-size: 20rpx;
    color: rgba(162, 162, 162, 1);
    margin-top: 2rpx;
}