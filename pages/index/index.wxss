/**index.wxss**/
/* 顶部 */
.header .header-search {
    width: 702rpx;
    height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 24rpx;
}
.header .header-search .search-logo {
    width: 56rpx;
    height: 56rpx;
}
.header .header-search .search-frame {
    position: relative;
    width: 546rpx;
    height: 60rpx;
}
.header .header-search .search-frame input {
    position: absolute;
    top: 0;
    width: 490rpx;
    height: 60rpx;
    background: #e8e8e8;
    border-radius: 30rpx;
    padding-left: 56rpx;
}
.placeholder {
    color: #8E8E93;
    font-size: 28rpx;
}
.header .header-search .search-frame image {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    top: 16rpx;
    left: 16rpx;
    z-index: 2;
}
.header .header-search .search-weather image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 8rpx;
}


/* 天气 */
.header .header-search .search-weather .name {
    font-size: 24rpx;
    color: #b2b2b2;
}
.header .header-search .search-weather .tempBox {
    display: flex;
    align-items: center;
}
.header .header-search .search-weather .temp {
    font-size: 20rpx;
    color: #b2b2b2;
}

/* 轮播图 */
/* 轮播图dots样式 */
.header-banner .dots .dot {
    width: 10rpx;
    height: 4rpx;
    border-radius: 4rpx;
    background: rgba(255,255,255,0.36);
    margin-left: 6rpx;
}
.header-banner .dots .dot.active {
    background: #fff;
}
.header-banner {
    height: 332rpx;
    position: relative;
}
.header-banner .dots {
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    display: flex;
}
.header-banner swiper {
    height: 332rpx;
}
.header-banner swiper .slide-image {
    width: 100%;
    height: 332rpx;
}
.header-banner swiper swiper-item {
    position: relative;
}
.header-banner swiper swiper-item .name {
    position: absolute;
    left: 12rpx;
    bottom: 18rpx;
    color: #fff;
    font-size: 30rpx;
    max-width: 420rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

/* 选择菜单 */
.menu {
    border-radius: 8rpx;
    box-shadow: 0 2rpx 17rpx 0 rgba(234, 240, 254, 1);
    width: 710rpx;
    margin: 30rpx auto 0;
}
.menu .menu-list {
    display: flex;
    flex-wrap: wrap
}
.menu .menu-child {
    width: 142rpx;
    text-align: center;
    padding: 20rpx 0 0
}
.menu .menu-child image {
    width: 85rpx;
    height: 85rpx;
}
.menu .menu-child text {
    font-size: 24rpx;
    color: rgb(102, 102, 102);
    margin-top: 20rpx;
    display: block;
}

/* 下拉更多 */
.menu .menuList-more {
    font-size: 24rpx;
    text-align: center;
    line-height: 50rpx;
    height: 70rpx;
    width: 100%;
}
.menu .menuList-more view {
    display: inline-block;
    width: 100rpx;
    height: 100%;
}
.menu .menuList-more image {
    width: 20rpx;
    height: 13rpx;
}

/* 旅游 */
.travel {
    width: 670rpx;
    margin: 30rpx auto 0;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 17rpx 0 rgba(234, 240, 254, 1);
    padding: 20rpx;
    display: flex;
    justify-content: space-between;
}
.travel .travel-logo {
    width: 63rpx;
    height: 67rpx;
}
.travel swiper {
    width: 590rpx;
    height: 68rpx;
}
.travel swiper swiper-item text {
    display: inline-block;
}
.travel swiper swiper-item text:first-child {
    display: inline-block;
    height: 25rpx;
    line-height: 25rpx;
    width: 45rpx;
    text-align: center;
    border-radius: 4rpx;
    font-size: 20rpx;
    color: rgba(81, 165, 255, 1);
    border: 1rpx solid rgba(81, 165, 255, 1);
    margin-right: 8rpx;
}
.travel swiper swiper-item text:nth-of-type(2) {
    white-space: nowrap;
    max-width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}
.travel swiper swiper-item {
    font-size: 28rpx;
    color:#959595;
    display: flex;
    align-items: center;
}

/* 热门推荐 */
.recommand {
    font-size: 30rpx;
    color: #000;
    font-weight: bold;
    margin: 30rpx;
}
.recommand text {
    vertical-align: middle;
}
.recommand text:nth-child(1) {
    display: inline-block;
    width: 8rpx;
    height: 34rpx;
    background: rgba(81, 165, 255, 1);
    border-bottom-right-radius: 4rpx;
    border-top-right-radius: 4rpx;
    margin-right: 12rpx;
}
.recommand-list {
    width: 100%;
}
.recommand-list .li {
    width: 710rpx;
    height: 279rpx;
    margin: 0 auto;
    margin-bottom: 20rpx;
    position: relative;
    color: #fff;
    text-align: center;
    border-radius: 10rpx;
    overflow: hidden;
}
.recommand-list .li image {
    width: 710rpx;
    height: 100%;
}
/* 标签 */
.recommand-list .li .label {
    display: inline-block;
    position: absolute;
    left: 16rpx;
    top: 16rpx;
    width: 78rpx;
    height: 28rpx;
    font-size: 16rpx;
    line-height: 28rpx;
    background-color: rgba(81, 165, 255, 1);
    border-radius: 4rpx;  
}
.recommand-list .li .name {
    position: absolute;
    bottom: 18rpx;
    left: 23rpx;
    font-size: 30rpx;
    color: #fff;
}