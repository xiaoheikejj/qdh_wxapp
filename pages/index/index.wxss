/**index.wxss**/
.header {
  height: 332rpx;
  width: 750rpx;
  position: relative;
}
/* 顶部 */
.header .top {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 200;
  margin: 0 32rpx;
  width: 686rpx;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header .top .logo {
  width: 66rpx;
  height: 60rpx;
  z-index: 100;
}
/* 搜索 */
.header .top .search-style {
  z-index: 10;
  width: 600rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: rgba(255,255,255,.85);
  color: #8e8e93;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.header .top .search-style image {
  width: 27rpx;
  height: 27rpx;
  margin: 0 15rpx;
}

.header .weather {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  text-align: center;
  z-index: 1000;
}
.header .weather image {
  width: 37rpx;
  height: 37rpx;
  opacity: 0.8;
}
.header .weather view {
  color: #fff;
  margin-top: 4rpx;
  opacity: 0.8;
}

/* 轮播图 */
swiper {
  height: 332rpx;
}
swiper .slide-image {
  width: 100%;
  height: 332rpx;
}
swiper swiper-item {
  position: relative;
}
swiper .name {
  position: absolute;
  left: 51rpx;
  bottom: 120rpx;
  color: #fff;
  font-size: 34rpx;
}

.menu {
  width: 710rpx;
  margin: 30rpx auto 0;
  box-shadow: 0 0 6rpx 5rpx rgba(122,164,255,.1);
  border-radius: 5rpx;
  padding-bottom: 20rpx;
}

.menu .menu-child {
  width: 142rpx;
  float: left;
  text-align: center;
  padding: 20rpx 0 0;
}
.menu .menu-child image {
  width: 85rpx;
  height: 85rpx;
}
.menu .menu-child text {
  font-size: 24rpx;
  color: rgb(102, 102, 102);
  margin-top: 20rpx;
  display: block;
}

/* 下拉更多 */
.menu .menuList-more {
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  height: 50rpx;
  width: 100%;
  padding: 0;
}
.menu .menuList-more view {
  display: inline-block;
  width: 100rpx;
  margin-top: -10rpx;
}
.menu .menuList-more image {
  width: 20rpx;
  height: 13rpx;
}

.recommand {
  font-size: 34rpx;
  text-align: left;
  width: 100%;
  padding-left: 40rpx;
  margin-top: 30rpx;
  position: relative;
  color: rgb(51, 51, 51);
}
.recommand::after {
  content: "";
  display: block;
  width: 5rpx;
  height: 30rpx;
  background-color: rgb(112, 164, 255);
  position: absolute;
  left: 25rpx;
  top: 8rpx;
}

.recommand-list {
  width: 100%;
  margin-top: 30rpx;
}
.recommand-list .li {
  width: 710rpx;
  height: 279rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  position: relative;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
}
.recommand-list .li image {
  width: 710rpx;
  border-radius: 10rpx;
  height: 280rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.recommand-list .li .name {
  font-size: 38rpx;
  padding-top: 97rpx;
}
.recommand-list .li .desc {
  font-size: 24rpx;
  margin-top: 32rpx;
  display: inline-block;  
  position: relative;
}
.recommand-list .li .desc::before {
  content: "";
  display: inline-block;
  width: 10rpx;
  height: 2rpx;
  background-color: #fff;
  position: absolute;
  left: -20rpx;
  top: 50%;
  margin-top: -1rpx;
}
.recommand-list .li .desc::after {
  content: "";
  display: inline-block;
  width: 10rpx;
  height: 2rpx;
  background-color: #fff;
  position: absolute;
  right: -20rpx;
  top: 50%;
  margin-top: -1rpx;
}
/* 标签 */
.recommand-list .li .label {
  position: absolute;
  right: 23rpx;
  bottom: 18rpx;
  width: 136rpx;
  height: 50rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  background-color: rgba(0,0,0,.5);
  border-radius: 10rpx;  
}